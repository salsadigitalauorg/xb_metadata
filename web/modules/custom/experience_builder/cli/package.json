{
  "name": "@drupal/xb-cli",
  "description": "CLI tool for managing Drupal Experience Builder code components",
  "license": "GPL-2.0-or-later",
  "repository": {
    "type": "git",
    "url": "git+https://git.drupalcode.org/project/experience_builder.git"
  },
  "bugs": "https://www.drupal.org/project/issues/experience_builder",
  "main": "dist/index.js",
  "bin": {
    "xb": "./dist/index.js"
  },
  "type": "module",
  "scripts": {
    "start": "node dist/index.js",
    "build": "NODE_ENV=production tsup",
    "dev": "NODE_ENV=development tsup --watch",
    "test:vitest": "vitest run",
    "watch:test": "vitest watch",
    "test": "npx npm-run-all --parallel --continue-on-error test:*",
    "type-check": "tsc --noEmit --pretty"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "experience-builder",
    "drupal",
    "cli"
  ],
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.0",
    "@eslint/js": "^9.22.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.0.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-formatter-junit": "^8.40.0",
    "eslint-plugin-prettier": "^5.1.3",
    "globals": "^16.0.0",
    "msw": "^2.10.2",
    "prettier": "^3.2.1",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "vitest": "^3.2.3"
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "@swc/wasm": "^1.12.1",
    "axios": "^1.9.0",
    "chalk": "^5.4.1",
    "commander": "^14.0.0",
    "dotenv": "^16.5.0",
    "js-yaml": "^4.1.0",
    "lightningcss": "^1.30.1",
    "table": "^6.9.0",
    "tailwindcss-in-browser": "^0.3.0"
  }
}
