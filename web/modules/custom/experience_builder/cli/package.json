{
  "name": "@drupal/experience_builder-cli",
  "version": "0.0.0",
  "description": "CLI tool for managing Experience Builder components",
  "main": "dist/index.js",
  "bin": {
    "xb": "./dist/index.js"
  },
  "type": "module",
  "workspaces": [
    "../ui"
  ],
  "scripts": {
    "start": "node dist/index.js",
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "prettier:fix": "prettier . --write --config ../.prettierrc.json",
    "prettier:check": "prettier . --check --config ../.prettierrc.json",
    "lint:eslint": "eslint . --max-warnings=0",
    "lint": "npm run lint:eslint",
    "lint:fix": "eslint --fix .",
    "type-check": "tsc --noEmit --pretty"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "experience-builder",
    "drupal",
    "cli"
  ],
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.0",
    "@eslint/js": "^9.22.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.0.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-formatter-junit": "^8.40.0",
    "eslint-plugin-prettier": "^5.1.3",
    "globals": "^16.0.0",
    "msw": "^2.10.2",
    "prettier": "^3.2.1",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "vitest": "^3.2.3"
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "@swc/wasm": "^1.12.1",
    "axios": "^1.9.0",
    "chalk": "^5.4.1",
    "commander": "^14.0.0",
    "dotenv": "^16.5.0",
    "js-yaml": "^4.1.0",
    "lightningcss": "^1.30.1",
    "table": "^6.9.0",
    "tailwindcss-in-browser": "^0.3.0"
  }
}
