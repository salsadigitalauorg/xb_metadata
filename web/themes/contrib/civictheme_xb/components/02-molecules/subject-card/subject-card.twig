{#
/**
 * @file
 * CivicTheme Subject Card component.
 *
 * Props:
 * - theme: [string] Theme variation (light or dark).
 * - attributes: [string] Additional HTML attributes.
 * - modifier_class: [string] Additional CSS classes.
 * - image: [object] Card image.
 *   Each property contains:
 *   - url: [string] Image URL.
 *   - alt: [string] Image alt text.
 * - link: [object] Card link object.
 *   Each property contains:
 *   - url: [string] Link URL.
 *   - is_new_window: [boolean] Whether to open the link in a new window.
 *
 * Slots:
 * - image_over: Image overlay content.
 * - title: Card title.
 *
 * Blocks:
 * - image_block
 * - image_over_block
 * - title_block
 */
#}

{% set with_link = link_url is defined and link_url is not empty %}
{% set with_image = image.src is defined and image.src is not empty %}
{% set with_image_class = with_image ? 'ct-subject-card--with-image' : '' %}
{% set theme_class = 'ct-theme-%s'|format(theme|default('light')) %}
{% set modifier_class = '%s %s %s'|format(theme_class, with_image_class, modifier_class|default('')) %}

{% if title is not empty %}
  <div class="ct-subject-card {{ modifier_class -}}" {% if attributes is not empty %}{{- attributes|raw -}}{% endif %}>
    <div class="ct-subject-card__content">
      {% block image_block %}
        {% if image.src is defined and image.src is not empty %}
          <div class="ct-subject-card__image">
            {% include 'civictheme_xb:image' with {
              theme: theme,
              image: image,
            } only %}
          </div>
        {% endif %}
      {% endblock %}

      {% block image_over_block %}
        {% if image_over is not empty %}
          <div class="ct-subject-card__image__over">
            {{ image_over }}
          </div>
        {% endif %}
      {% endblock %}

      {% block title_block %}
        {% if title is not empty %}
          {% set title_content %}
            {% if with_link %}
              {% include 'civictheme_xb:link' with {
                theme: theme,
                text: title,
                url: link_url,
                is_new_window: link_is_new_window,
                is_external: false,
                icon: not with_image and with_link ? 'right-arrow-2' : null,
                icon_group_disabled: true,
                modifier_class: 'ct-subject-card__title__link',
              } only %}
            {% else %}
              {{ title }}
            {% endif %}
          {% endset %}

          {% include 'civictheme_xb:heading' with {
            content: title_content,
            level: 4,
            theme: theme,
            modifier_class: 'ct-subject-card__title',
          } only %}
        {% endif %}
      {% endblock %}
    </div>
  </div>
{% endif %}
