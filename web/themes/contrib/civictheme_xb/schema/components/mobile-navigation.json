      "props": {
        "theme": {
          "type": "string",
          "enum": ["light", "dark"],
          "default": "light"
        },
        "items": {
          "type": "array",
          "description": "Menu items with hierarchical structure"
        },
        "modifier_class": {
          "type": "string",
          "description": "Additional CSS classes"
        }
      }
    }
  ],
  "dependencies": [
