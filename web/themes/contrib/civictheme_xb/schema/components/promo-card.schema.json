{
  "$schema": "https://schemas.dsis.dev/v1.0/component.schema.json",
  "id": "promo-card",
  "name": "Promo Card",
  "description": "Card component for displaying promotional content with image, title, summary, date, and tags. Supports both light and dark themes with flexible content areas and link functionality.",
  "category": "molecules",
  "status": "stable",
  "version": "1.0.0",
  "framework": "twig",
  "library": "CivicTheme",
  "metadata": {
    "designTokens": ["theme", "spacing", "typography", "elevation"],
    "accessibility": {
      "wcag": ["AA"],
      "features": ["keyboard-navigation", "screen-reader-support", "focus-management"]
    },
    "responsive": true,
    "themeable": true
  },
  "props": {
    "type": "object",
    "properties": {
      "theme": {
        "type": "string",
        "title": "Theme",
        "description": "Theme variation for the card",
        "enum": ["light", "dark"],
        "default": "light"
      },
      "image": {
        "type": "object",
        "title": "Image",
        "description": "Card image configuration",
        "properties": {
          "url": {
            "type": "string",
            "title": "Image URL",
            "description": "URL of the card image"
          },
          "alt": {
            "type": "string",
            "title": "Alt Text",
            "description": "Alternative text for the image"
          }
        }
      },
      "date": {
        "type": "string",
        "title": "Start Date",
        "description": "Human-readable start date and time"
      },
      "date_iso": {
        "type": "string",
        "title": "ISO Start Date",
        "description": "Start date and time in ISO format for machine readability"
      },
      "date_end": {
        "type": "string",
        "title": "End Date",
        "description": "Human-readable end date and time"
      },
      "date_end_iso": {
        "type": "string",
        "title": "ISO End Date",
        "description": "End date and time in ISO format for machine readability"
      },
      "link": {
        "type": "object",
        "title": "Link",
        "description": "Card link configuration",
        "properties": {
          "url": {
            "type": "string",
            "title": "URL",
            "description": "Link URL"
          },
          "is_new_window": {
            "type": "boolean",
            "title": "New Window",
            "description": "Whether to open the link in a new window",
            "default": false
          },
          "is_external": {
            "type": "boolean",
            "title": "External Link",
            "description": "Whether the link is external",
            "default": false
          }
        }
      },
      "tags": {
        "type": "array",
        "title": "Tags",
        "description": "Array of tag objects for the card",
        "items": {
          "type": "object",
          "properties": {
            "text": {
              "type": "string",
              "title": "Tag Text",
              "description": "Text content of the tag"
            },
            "url": {
              "type": "string",
              "title": "Tag URL",
              "description": "URL for the tag link"
            },
            "is_new_window": {
              "type": "boolean",
              "title": "New Window",
              "description": "Whether to open tag link in new window",
              "default": false
            }
          }
        }
      },
      "attributes": {
        "type": "string",
        "title": "HTML Attributes",
        "description": "Additional HTML attributes for the card wrapper"
      },
      "modifier_class": {
        "type": "string",
        "title": "Modifier Classes",
        "description": "Additional CSS classes for customization"
      }
    }
  },
  "slots": {
    "subtitle": {
      "title": "Subtitle",
      "description": "Optional subtitle text displayed above the title"
    },
    "title": {
      "title": "Title",
      "description": "Main card title - required for card to render",
      "required": true
    },
    "summary": {
      "title": "Summary",
      "description": "Card summary or description text"
    },
    "content_top": {
      "title": "Top Content",
      "description": "Content area above the subtitle"
    },
    "image_over": {
      "title": "Image Overlay",
      "description": "Content to overlay on the image"
    },
    "content_middle": {
      "title": "Middle Content",
      "description": "Content area between title and summary"
    },
    "content_bottom": {
      "title": "Bottom Content",
      "description": "Content area at the bottom of the card"
    }
  },
  "cssClasses": {
    "root": "ct-promo-card",
    "modifiers": {
      "theme": {
        "light": "ct-theme-light",
        "dark": "ct-theme-dark"
      },
      "withImage": "ct-promo-card--with-image",
      "imageOver": "ct-promo-card--image-over"
    },
    "elements": {
      "image": "ct-promo-card__image",
      "imageOver": "ct-promo-card__image__over",
      "content": "ct-promo-card__content",
      "contentTop": "ct-promo-card__content-top",
      "subtitle": "ct-promo-card__subtitle",
      "date": "ct-promo-card__date",
      "title": "ct-promo-card__title",
      "titleLink": "ct-promo-card__title__link",
      "contentMiddle": "ct-promo-card__content-middle",
      "summary": "ct-promo-card__summary",
      "tags": "ct-promo-card__tags",
      "tagsLink": "ct-promo-card__tags__link",
      "contentBottom": "ct-promo-card__content-bottom"
    }
  },
  "designTokens": {
    "spacing": ["ct-spacing(2)", "ct-spacing(3)"],
    "borderRadius": ["$ct-promo-card-border-radius"],
    "elevation": ["ct-elevation-interaction()"],
    "image": {
      "mobile": {
        "height": "$ct-promo-card-image-height-mobile",
        "width": "$ct-promo-card-image-width-mobile"
      },
      "desktop": {
        "height": "$ct-promo-card-image-height-desktop",
        "width": "$ct-promo-card-image-width-desktop"
      }
    },
    "stripe": {
      "height": "$ct-promo-card-stripe-height"
    }
  },
  "dependencies": [
    "civictheme:image",
    "civictheme:tag",
    "civictheme:datetime",
    "civictheme:link",
    "civictheme:heading",
    "civictheme:paragraph",
    "civictheme:tag-list"
  ],
  "platform": {
    "drupal": {
      "schema": "https://git.drupalcode.org/project/drupal/-/raw/HEAD/core/assets/schemas/v1/metadata.schema.json",
      "component_id": "civictheme:promo-card"
    }
  },
  "examples": [
    {
      "name": "Default",
      "description": "Basic promo card with all standard elements",
      "props": {
        "theme": "light",
        "title": "Promo card name which runs across two or three lines",
        "subtitle": "Subtitle",
        "summary": "Summary",
        "date": "20 Jan 2023 11:00",
        "date_end": "21 Jan 2023 15:00",
        "image": {
          "url": "./demo/images/demo1.jpg",
          "alt": "Image alt text"
        },
        "link": {
          "url": "https://example.com",
          "is_external": false,
          "is_new_window": false
        },
        "tags": ["Tag 1", "Tag 2"]
      }
    },
    {
      "name": "Dark Theme",
      "description": "Promo card with dark theme",
      "props": {
        "theme": "dark",
        "title": "Dark themed promo card",
        "summary": "This card uses the dark theme variation"
      }
    },
    {
      "name": "Without Image",
      "description": "Promo card without an image, shows stripe highlight",
      "props": {
        "theme": "light",
        "title": "Card without image",
        "summary": "This card demonstrates the stripe highlight when no image is present"
      }
    }
  ],
  "accessibility": {
    "notes": [
      "Title is required for the card to render",
      "Links include proper ARIA attributes for accessibility",
      "Images must include alt text",
      "Date information uses proper datetime markup",
      "Card maintains focus order for keyboard navigation"
    ]
  },
  "bestPractices": [
    "Always provide alt text for images",
    "Use meaningful and descriptive titles",
    "Provide both human-readable and ISO format dates when available",
    "Keep tag labels concise and descriptive",
    "Use the link prop for the main card action rather than embedding links in content"
  ],
  "extraction": {
    "source": "CivicTheme UIKit",
    "timestamp": "2025-08-10",
    "version": "uikit-main",
    "confidence": {
      "props": 0.95,
