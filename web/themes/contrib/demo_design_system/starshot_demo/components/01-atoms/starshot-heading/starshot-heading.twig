{#
/**
 * @file
 * Starshot Heading component.
 *
 * Variables:
 * - theme: [string] Theme: light, dark.
 * - content: [string] Heading content.
 * - level: [string] Semantic level: 1, 2, 3, 4, 5, 6.
 * - font: [string] Font: heading, heading-2, heading-3, heading-4, heading-5, heading-6.
 * - align: [string] Heading alignment: left, right, center.
 * - margin: [string] Heading alignment: none, small, medium, large.
 * - attributes: [string] Additional attributes.
 * - modifier_class: [string] Additional classes.
 */
#}

{% set theme_class = 'ct-theme-%s'|format(theme|default('light')) %}
{% set font_class = 'ct-starshot-heading--font-%s'|format(font|default('heading')) %}
{% set align_class = 'ct-starshot-heading--%s'|format(align|default('left')) %}
{% set margin_class = 'ct-starshot-heading--margin-%s'|format(margin|default('none')) %}
{% set modifier_class = '%s %s %s %s %s'|format(theme_class, font_class, align_class, margin_class, modifier_class|default('')) %}

{% set level = level|default(2) %}

{% if content %}
  <h{{ level }} class="ct-starshot-heading {{ modifier_class -}}" {% if attributes is not empty %}{{- attributes|raw -}}{% endif %}>
    {{- content|raw -}}
  </h{{ level }}>
{% endif %}
