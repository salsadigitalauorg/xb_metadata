{#
/**
 * @file
 * Starshot Paragraph component.
 *
 * Variables:
 * - theme: [string] Theme: light, dark.
 * - content: [string] The description's content.
 * - display: [string] Size: regular, large, strong.
 * - attributes: [string] Additional attributes.
 * - modifier_class: [string] Additional classes.
 */
#}

{% set theme_class = 'ct-theme-%s'|format(theme|default('light')) %}
{% set display_class = 'ct-starshot-paragraph--%s'|format(display|default('regular')) %}
{% set modifier_class = '%s %s %s'|format(theme_class, display_class, modifier_class|default('')) %}

{% if content is not empty -%}
  <div class="ct-starshot-paragraph {{ modifier_class -}}" {% if attributes is not empty %}{{- attributes|raw -}}{% endif %}>
    {{- content|striptags('<strong><em><ul><ol><li><a><u>')|raw -}}
  </div>
{%- endif %}
