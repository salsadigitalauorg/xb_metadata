      {% embed '@base/starshot-one-col/starshot-one-col.twig' %}
        {% block column_one %}
          {% include '@molecules/old-starshot-card/old-starshot-card.twig' with {
            theme: theme,
            title: 'Ready to try Drupal?',
            summary: 'With robust content management tools, sophisticated APIs for multichannel publishing, and a track record of continuous innovation - Drupal is the best digital experience platform(DXP) on the web, proudly open source.',
            link: {text: 'Learn more', url: '/'},
            background: 'background-5',
            display: 'horizontal',
          } only %}
        {% endblock %}
      {% endembed %}
      {% embed '@base/starshot-three-col/starshot-three-col.twig' %}
        {% block column_one %}
          {% include '@molecules/old-starshot-card/old-starshot-card.twig' with {
            theme: theme,
            title: 'Download Drupal',
            summary: 'Drupal is a powerful framework that has inspired a new generation of digital experiences.',
            link: {text: 'Download Drupal', url: '/'},
            background: 'background-2',
          } only %}
        {% endblock %}
        {% block column_two %}
          {% include '@molecules/old-starshot-card/old-starshot-card.twig' with {
            theme: theme,
            title: 'Developer\'s Guide',
            summary: 'Drupal is a powerful framework that has inspired a new generation of digital experiences.',
            link: {text: 'Download Drupal', url: '/'},
            background: 'background-3',
          } only %}
        {% endblock %}
        {% block column_three %}
          {% include '@molecules/old-starshot-card/old-starshot-card.twig' with {
            theme: theme,
            title: 'Drupal Quickstart',
            summary: 'Drupal is a powerful framework that has inspired a new generation of digital experiences.',
            link: {text: 'Download Drupal', url: '/'},
            background: 'background-4',
          } only %}
        {% endblock %}
      {% endembed %}
    {% endblock %}
  {% endembed %}
{% endif %}

